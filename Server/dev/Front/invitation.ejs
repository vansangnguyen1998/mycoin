    <script>
        window.app = angular.module('invite', []);
        app.controller('invitationController', function ($scope, $http) {

            $scope.confirmInvitation = function (pubK, invitationID, senderID) {
                console.log(pubK, invitationID, senderID);

                $http({
                    url: '/confirmRegister',
                    method: "POST",
                    data: {
                        "recipient_public_key": pubK,
                        "invitationID": invitationID,
                        "senderID": senderID
                    }
                })
                    .then(function (response) {
                        alert("כעת אתה חבר ברשת עם סכום התחלתי של 100 מטבעות \n וברשותך 2 הזמנות");
                        
                        window.location.replace("http://localhost:3001/");
                    },
                        function (response) {
                            console.log("failed");
                        });
            };


        });
        
